<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editScore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Score 1"
        android:padding="20dp"
        android:background="@color/gray"
        android:maxLength="2"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <EditText
        android:id="@+id/editScore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Score 2"
        android:padding="20dp"
        android:background="@color/gray"
        android:maxLength="2"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/editScore3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Score 3"
        android:padding="20dp"
        android:background="@color/gray"
        android:maxLength="2"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toBottomOf="@id/editScore1"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/editScore4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Score 4"
        android:padding="20dp"
        android:background="@color/gray"
        android:maxLength="2"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editScore2"/>

    <EditText
        android:id="@+id/editAbsence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Absence Number"
        android:padding="20dp"
        android:background="@color/gray"
        android:maxLength="2"
        android:inputType="number"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/editScore3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_margin="30dp"
        android:padding="20dp"
        android:backgroundTint="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/editAbsence"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btCalculate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>